<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:elevation="10dp"
                app:title=" ">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Coin"
                    android:layout_gravity="center"
                    android:id="@+id/toolbar_title" />

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_below="@+id/topbar"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#834e4158">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Select Exchange"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_weight="50"
                    android:padding="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#20cbff"
                    android:textSize="18sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardview1"
            android:layout_marginTop="1dp"
            app:cardBackgroundColor="#834e4158">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Trading Pair"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:textColor="#acb483"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#20cbff"
                    android:textSize="18sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/cardview2"
            app:cardBackgroundColor="#834e4158">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/buy"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:text="Buy"
                        android:textColor="#acb483" />

                    <RadioButton
                        android:id="@+id/sell"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:text="Sell"
                        android:textColor="#acb483" />

                    <RadioButton
                        android:id="@+id/watchonly"
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:text="Watch Only"
                        android:textColor="#acb483" />

                </RadioGroup>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardview3"
            app:cardBackgroundColor="#834e4158">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Current Price"
                    android:layout_weight="50"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#acb483"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/current_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:textColor="#20cbff"
                    android:textSize="18sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardview4"
            android:visibility="gone"
            android:layout_marginTop="1dp"
            app:cardBackgroundColor="#834e4158">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trade Price"
                    android:textColor="#acb483"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="105dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="152dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Enter Trade Price"
                    android:inputType="number"
                    android:textColor="#20cbff"
                    android:textColorHint="#e3151212"
                    android:textSize="12dp" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardview5"
            android:layout_marginTop="1dp"
            app:cardBackgroundColor="#834e4158">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_weight="50"
                    android:text="Quantity"
                    android:textColor="#acb483"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/holding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="50"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="Enter Quantity"
                    android:inputType="numberDecimal"
                    android:textColor="#20cbff"
                    android:textSize="18sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardview6"
            android:layout_marginTop="1dp"
            app:cardBackgroundColor="#834e4158">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Value"
                    android:layout_weight="50"
                    android:padding="10dp"
                    android:textColor="#acb483"
                    android:layout_gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/total_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardview7"
            android:layout_marginTop="1dp"
            android:visibility="gone"
            app:cardBackgroundColor="#834e4158">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"

                    android:layout_marginTop="15dp"
                    android:text="Deduct From ETH Holdings"

                    android:textColor="#acb483"
                    android:textSize="15dp" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="15dp"
                    android:checked="false" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/cardview8"
            android:visibility="gone"

            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#834e4158">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="Trade Date"
                android:textColor="#acb483"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="265dp"
                android:layout_marginTop="13dp"
                android:text="July 17,2018"
                android:textColor="#20cbff"
                android:textSize="12dp" />


        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_below="@+id/cardview9"
            android:id="@+id/submit"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:background="#834e4158"
            android:text="Update"/>

    </RelativeLayout>
</ScrollView>
